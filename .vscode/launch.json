{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
    {
        "name": "Run Browser",
        "type": "cordova",
        "request": "launch",
        "platform": "browser",
        "target": "chrome",
        "simulatePort": 8000,
        "livereload": true,
        "cwd": "${workspaceFolder}",
        "sourceMaps": true
    },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}"
        }
    ]
}